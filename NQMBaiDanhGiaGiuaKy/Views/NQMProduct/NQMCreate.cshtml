@model NQMBaiDanhGiaGiuaKy.Models.NQMProduct

@{
    ViewBag.Title = "NQMCreate";
}

<h2>Thêm mới</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
