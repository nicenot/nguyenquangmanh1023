            @Html.LabelFor(model => model.NQMIsActive, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.NQMIsActive)
                    @Html.ValidationMessageFor(model => model.NQMIsActive, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LvhCreate" class="btn btn-success" />
                <a href="LvhIndex" class="btn btn-success" name="lvhBtnBack">LVH: Back</a>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
